packages:
  yum:
    awscli: []

files:
  "/tmp/download_and_unzip_model.sh":
    mode: "000755"
    owner: root
    group: root
    content: |
      #!/bin/bash
      S3_URL="https://virtualscale-cdn.s3.us-east-2.amazonaws.com/vosk/models/med/vosk-model-en-us-daanzu-20200905.zip"
      mkdir -p /var/app/current/src/models/med
      aws s3 cp $S3_URL /tmp/model.zip
      unzip -q /tmp/model.zip -d /tmp
      mv /tmp/vosk-model-en-us-daanzu-20200905 /var/app/current/src/models/med/
      rm /tmp/model.zip

commands:
  01_download_and_unzip_model:
    command: "/tmp/download_and_unzip_model.sh"
    leader_only: true